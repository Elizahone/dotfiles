# yazi
function ya() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(command cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
		builtin cd -- "$cwd"
	fi
	rm -f -- "$tmp"
}

function cd() {
	builtin cd $@;lsd
}


function e() {
  str=$@
  if [[ "$str" == .* ]]; then
    str="$PWD${str:1}"
  fi
  hyprctl dispatch exec "emacs --chdir $str" > /dev/null
}

