# 设置 Kitty 终端标题
function set_kitty_title() {
    if [[ -n "$1" ]]; then
        # 如果有命令正在运行（如 nvim），显示命令名
        echo -ne "\e]0;${1}\a"
    else
        # 否则显示 "zsh: <当前目录>"
        echo -ne "\e]0;zsh: ${PWD/#$HOME/~}\a"
    fi
}

# 在命令执行前更新标题（显示命令名）
function preexec_kitty_title() {
    set_kitty_title "$1"
}

# 在提示符显示前更新标题（显示当前目录）
function precmd_kitty_title() {
    set_kitty_title ""
}

# 绑定钩子
add-zsh-hook precmd precmd_kitty_title
add-zsh-hook preexec preexec_kitty_title


